{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "node": true
  },

  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },

  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "single", "avoid-escape"],
    "arrow-parens": [2, "as-needed"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "arrow-spacing": [2, { "before": true, "after": true }]
  }
}
